{
  "name": "react-express-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node prod",
    "prod": "nodemon src/index.js",
    "client": "npm start --prefix client",
    "server": "env-cmd ./config/dev.env nodemon src/index.js",
    "dev": "concurrently \"npm run client\" \"npm run server\"",
    "test": "env-cmd ./config/test.env jest --watch --runInBand",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "keywords": [],
  "author": "Quim Granados",
  "license": "ISC",
  "dependencies": {
    "@sendgrid/mail": "^6.3.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "express": "^4.16.4",
    "jsonwebtoken": "^8.5.0",
    "moment": "^2.24.0",
    "mongodb": "^3.1.10",
    "mongoose": "^5.3.16",
    "multer": "^1.4.1",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "sharp": "^0.21.1",
    "validator": "^10.11.0"
  },
  "devDependencies": {
    "concurrently": "^4.1.0",
    "env-cmd": "^8.0.2",
    "jest": "^23.6.0",
    "nodemon": "^1.18.9",
    "supertest": "^3.4.1"
  }
}
